FROM golang:1.24

ARG COMMITMENT_LINK_PREFIX
ARG TELEGRAM_BOT_TOKEN
ARG DB_HOST
ARG DB_PORT
ARG DB_USER
ARG DB_PASSWORD
ARG DB_NAME
ENV COMMITMENT_LINK_PREFIX $COMMITMENT_LINK_PREFIX
ENV TELEGRAM_BOT_TOKEN $TELEGRAM_BOT_TOKEN
ENV DB_HOST $DB_HOST
ENV DB_PORT $DB_PORT
ENV DB_USER $DB_USER
ENV DB_PASSWORD $DB_PASSWORD
ENV DB_NAME $DB_NAME

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /tg-bot
EXPOSE 5174
CMD ["/tg-bot"]
